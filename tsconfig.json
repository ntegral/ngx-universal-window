{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "strict": true,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "sourceMap": false,
        "rootDir": "./lib",
        "outDir": "./dist",
        "skipLibCheck": true
    },
    "include": [
        "lib/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}